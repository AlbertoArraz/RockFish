{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="mt-3 mb-4">Peces</h1>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('pez.crear') }}" class="btn btn-primary">Crear pez</a>
    {% endif %}
    <hr>
    <div class="row">
        {% for pez in peces %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{asset('img_pez/' ~ pez.imagen)}}" alt="{{ pez.nombre }}" class="card-img-top" height="300">
                    <div class="card-body">
                        <h5 class="card-title m-0">{{ pez.nombre }}</h5>
                        <p class="card-text">{{ pez.descripcion }}</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('pez.detalles', {id: pez.id}) }}" class="btn btn-dark">Ver detalles</a>

                            <span class="h5 mt-auto">{{ pez.precio }} â‚¬</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
